<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weekUpdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="Week"
    android:background="@drawable/home_screen"
    tools:context=".matchup.MatchupTest">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/matchup_recyclerview"
        android:layout_width="413dp"
        android:layout_height="498dp"
        android:background="#FFFFFF"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/circularMatchup"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/matchupNametext"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="1dp"
        android:background="#00E87A"
        android:fontFamily="sans-serif"
        android:text="MATCHUPS"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#37033D"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/matchup_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/weekSelector"
        android:layout_width="321dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_button"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/matchupNametext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />
</androidx.constraintlayout.widget.ConstraintLayout>